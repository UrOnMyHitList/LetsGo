<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="t.systematic.letsgo.FriendActivities.FriendsManagerActivity">

    <TextView
        android:id="@+id/friendsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:text="Friends"
        android:textColor="@color/royalAway"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/friendsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/friendsTextView"
        android:layout_above="@id/linearLayout"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:scrollbarAlwaysDrawVerticalTrack="true" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="42dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addFriendButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="addFriendButtonClicked"
            android:background="@color/royalAway"
            android:layout_marginEnd="5dp"
            android:textColor="@color/background"
            android:text="Add Friend"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/removeFriendButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="removeFriendButtonClicked"
            android:background="@color/royalAway"
            android:layout_marginStart="5dp"
            android:textColor="@color/background"
            android:text="Remove Friend"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>
