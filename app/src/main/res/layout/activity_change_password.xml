<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".AccountManagement.ChangeAccountInfoActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Reset Your Password"
        android:textColor="@color/royalAway"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/inputCurrentPswrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:ems="10"
        android:textColor="@color/royalAway"
        android:hint="Enter Current Password"
        android:inputType="textPassword" />


    <EditText
        android:id="@+id/inputNewPswrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/inputCurrentPswrd"
        android:layout_below="@+id/inputCurrentPswrd"
        android:layout_margin="20dp"
        android:ems="10"
        android:textColor="@color/royalAway"
        android:hint="Enter New Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/reinputNewPswrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputNewPswrd"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/textView7"
        android:ems="10"
        android:textColor="@color/royalAway"
        android:hint="Re-enter New Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/reinputNewPswrd"
        android:layout_margin="20dp"
        android:background="@color/colorPrimary"
        android:onClick="onClickPasswordChange"
        android:text="RESET PASSWORD"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />
</LinearLayout>
